/**----data type----**/
typedef long long int ll;
typedef unsigned long long int llu;

/**---Graph move---**/
int dx[]= {-1, 0, 1,  0, -1, -1,  1, 1};
int dy[]= { 0, 1, 0, -1, -1,  1, -1, 1};
int kx[]= {-2,-1, 1, 2,  2,  1, -1, -2};
int ky[]= { 1, 2, 2, 1, -1, -2, -2, -1};

//map<int,int,greater<int>>m;

void solved()
{
    int n,k;
    cin>>n;
    int a[n];
    for(int i=0; i<n; i++)
    {
        cin>>a[i];
    }
    sort(a,a+n);
    int mn=a[0];
    vector<int>v;
    for(int i=0; i<n; i++)
    {
        if(mn!=a[i])
        {
            int val=abs(mn-a[i]);
            v.pb(val);
        }
    }
    int gc=0;
    for(int i:v)
    {
        gc=gcd(gc,i);
    }
   if(gc>=1)cout<<gc<<nl;
   else cout<<-1<<nl;
}

int main()
{
    ll tc;
    cin>>tc;
    //tc=1;
    while(tc--)
    {
        solved();
    }
}
