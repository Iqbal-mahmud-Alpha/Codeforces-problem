/**----data type----**/
typedef long long int ll;
typedef unsigned long long int llu;

/**---Graph move---**/
int dx[]= {-1, 0, 1,  0, -1, -1,  1, 1};
int dy[]= { 0, 1, 0, -1, -1,  1, -1, 1};
int kx[]= {-2,-1, 1, 2,  2,  1, -1, -2};
int ky[]= { 1, 2, 2, 1, -1, -2, -2, -1};


void solved()
{
    int n,h;
    cin>>n>>h;
    int a[n];
    for(int i=0; i<n; i++)
    {
        cin>>a[i];
    }
    sort(a,a+n);
    int sum=a[n-1]+a[n-2];
    int r=h/sum;

    if(h%sum==0)
    {
        cout<<(r*2)<<nl;
    }
    else if(h%sum<=a[n-1])
    {
        cout<<(r*2)+1<<nl;
    }
    else
    {
        cout<<(r*2)+2<<nl;
    }

}

int main()
{
    ll tc;
    cin>>tc;
    // tc=1;
    while(tc--)
    {
        solved();
    }
}
