#include <bits/stdc++.h>
using namespace std;
#define faster            ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define ff                first
#define ss                second
#define pb                push_back
#define p                pair<ll,ll>
#define mem(a,b)          memset(a,b,sizeof(a))
#define gcd(a, b)         __gcd(a, b)
#define lcm(a, b)         (a * (b / gcd(a, b)))
#define all(a)            a.begin(), a.end()
#define setbit(n)         __builtin_popcount(n);
#define totalbit(n)       log2(n)+1
#define lens(s)           s.size()
#define lena(a)            sizeof(a)/sizeof(a[0])
#define posation(x)       cout<<fixed<<setprecision(x)
#define pi                3.141592653589793
#define INF               1000000000
#define mod               1000000007
#define num               100005

/**----data type----*/
typedef long long int ll;
typedef unsigned long long int llu;

int main()
{
    int tc,n,a,b;
    string s;
    cin>>tc;
    while(tc--)
    {
        cin>>a>>b;
        cin>>s;
        int one=0,zero=0,sum=a+b;
        for(int i=0; i<lens(s); i++)
        {
            if(s[i]=='0')zero++;
            else if(s[i]=='1')one++;
        }
        int f=0,cnt=0;
        if(zero>a)f=1;
        else if(one>b)f=1;
        a-=zero,b-=one;

        string s1,s2;
        s1=s.substr(0,lens(s)/2);
        if(sum%2==0)
        {
            s2=s.substr(lens(s)/2,lens(s));
        }
        else
        {
            s2=s.substr(lens(s)/2+1,lens(s));
        }
        reverse(all(s2));
        for(int i=0; i<lens(s1); i++)
        {
            if(s1[i]=='0' and s2[i]=='0')continue;
            else if(s1[i]=='1' and s2[i]=='1')continue;
            else if(s1[i]=='?' and s2[i]=='?')cnt++;
            else if(s1[i]=='0' and s2[i]=='?')
            {
                if(a>0)
                {
                    a--;
                }
                else
                {
                    f=1;
                }
            }
            else if(s1[i]=='1' and s2[i]=='?')
            {
                if(b>0)
                {
                    b--;
                }
                else
                {
                    f=1;
                }
            }
            else if(s1[i]=='?' and s2[i]=='0')
            {
                if(a>0)
                {
                    s1[i]='0';
                    a--;
                }
                else
                {
                    f=1;
                }
            }
            else if(s1[i]=='?' and s2[i]=='1')
            {
                if(b>0)
                {
                    s1[i]='1';
                    b--;
                }
                else
                {
                    f=1;
                }
            }
            else
            {
                f=1;
            }
        }
        if(cnt*2<=(a+b) and f==0)
        {
            for(int i=0; a>=2 and i<lens(s1); i++)
            {
                if(s1[i]=='?')
                {
                    s1[i]='0';
                    a-=2;
                }
            }
            for(int i=0; b>=2 and i<lens(s1); i++)
            {
                if(s1[i]=='?')
                {
                    s1[i]='1';
                    b-=2;
                }
            }
        }
        if(sum%2==1 and s[lens(s)/2]=='?')
        {
            if(a>0)
            {
                s[lens(s)/2]='0';
                a--;
            }
            else if(b>0)
            {
                s[lens(s)/2]='1';
                b--;
            }
        }
        size_t it=s1.find('?');
        if(it==string::npos and f==0 and sum%2==0)
        {
            cout<<s1;
            reverse(all(s1));
            cout<<s1<<endl;
        }
        else if(it==string::npos and f==0 and sum%2==1)
        {
            cout<<s1<<s[lens(s)/2];
            reverse(all(s1));
            cout<<s1<<endl;
        }
        else cout<<-1<<endl;
    }
}
