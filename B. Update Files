int ky[]= { 1, 2, 2, 1, -1, -2, -2, -1};

//map<int,int,greater<int>>m;
vector<ll>v;
void solved()
{
    ll n,k,val;
    cin>>n>>k;
    auto it=lower_bound(all(v),k);
    ll in=it-v.begin();
    val=(n-*it);
    if(val<=0)
    {
        cout<<in<<nl;
    }
    else
    {
        ll res=(val/k);
        if(val%k)cout<<res+in+1<<nl;
        else cout<<res+in<<nl;
    }
}

int main()
{
    for0(0,63)
    {
        v.pb(pow(2,i));
    }
    ll tc;
    cin>>tc;
    //tc=1;
    while(tc--)
    {
        solved();
    }
}
